---
import { BalatroBG } from "../components/BalatroBG";
import "../styles/global.css";

interface Props {
  title: string;
}

const title = Astro.props.title;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.jpg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-[#121212] pb-5 bg-[url('/balatro-bg.webp')] bg-center bg-[length:100%]">
    <div class="absolute w-[100vw] h-[100vh] top-0 left-0 -z-20 hidden md:block">
      <BalatroBG
        client:load
        isRotate={false}
        mouseInteraction={false}
        pixelFilter={1460}
      />
    </div>
    <slot />
  </body>
</html>

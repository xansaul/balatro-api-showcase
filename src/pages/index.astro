---
import Image from "astro/components/Image.astro";
import balatroLogo from "../assets/logo-balatro.png";
import MainLayout from "../layouts/MainLayout.astro";
import { Icon } from "astro-icon/components";
import { Button, TiltedCard, WarningInfo } from "@/components";
import { getJokers, getTarot } from "@/core";

const jokers = await getJokers(7,10)

const tarot = await getTarot(7,2)
---

<MainLayout title="Balatro balatro tin ding tututututu">
  <div
    class="md:flex md:p-0 px-2 text-white gap-4 pt-12 justify-center items-center"
  >
    <div class="2xl:mt-10 md:mt-4  flex gap-5">
      <Image src={balatroLogo} alt="Balatro" class="w-sm" />
      <span class="text-9xl place-self-end">API</span>
    </div>
  </div>
  <WarningInfo/>
  <div
    class="w-11/12 md:w-8/12 m-auto flex flex-wrap gap-5 mt-4 justify-center"
  >

  
    
    <a href="http://www.buymeacoffee.com/xansaul" target="_blank">
      <Button class="bg-cyan-600 cursor-pointer" >
        <span class="text-2xl">
          üç∫ Buy me a beer
        </span>
      </Button>
    </a>
    

    <a
      href="https://balatro-api-production.up.railway.app/swagger/index.html"
      target="_blank"
    >
      <Button class="cursor-pointer bg-gradient-to-r from-blue-900 to-red-900">
        <Icon name={"server"} size={25} />
        <span class="place-self-end text-2xl">API Docs</span>
      </Button>
    </a>
    
    <a
      href="https://github.com/xansaul"
      target="_blank"
    >
    <Button class="cursor-pointer bg-red-900 flex justify-center items-center gap-2">
        <div class="flex justify-center items-center gap-2">
          <Icon name={"github"} size={25} />
          <span class="place-self-end text-2xl">Github</span>
        </div>
      </Button>
    </a>

    <a
      href="https://xansaul.com"
      target="_blank"
    >
      <Button class="cursor-pointer bg-blue-900 flex justify-center items-center gap-2">
          <div class="flex justify-center items-center gap-2">
            <Icon name={"web"} size={25} />
            <span class="place-self-end text-2xl">My site</span>
          </div>
      </Button>
    </a>
  </div>
  <div class="text-white md:w-10/12 2xl:w-8/12 w-11/12 m-auto">
    <div class="flex justify-end text-lg">
      <a href="/jokers/1">Show more...</a>
    </div>

    <div class="flex flex-wrap gap-5 md:justify-around justify-center">
      {
        jokers.map((joker) => (
          <div class="text-white">
            <TiltedCard
              client:load
              imageSrc={joker.joker_image}
              containerHeight="200px"
              containerWidth="150px"
              imageHeight="200px"
              imageWidth="150px"
              rotateAmplitude={27}
              scaleOnHover={1}
              showTooltip={false}
              showMobileWarning={false}
            />
            <span class="block mt-1 text-lg">{joker.joker}</span>
          </div>
        ))
      }
    </div>
  </div>

  <div class="text-white md:w-10/12 2xl:w-8/12 w-11/12 m-auto">
    <div class="flex justify-end text-lg">
      <a href="/tarot/1">Show more...</a>
    </div>

    <div class="flex flex-wrap gap-5 md:justify-around justify-center">
    {
      tarot.map((tarot) => (
        <div class="text-white">
          <TiltedCard
            client:load
            imageSrc={tarot.tarot_image}
            containerHeight="200px"
            containerWidth="150px"
            imageHeight="200px"
            imageWidth="150px"
            rotateAmplitude={27}
            scaleOnHover={1}
            showTooltip={false}
            showMobileWarning={false}
          />
          <span class="block mt-1 text-lg">{tarot.tarot_name}</span>
        </div>
      ))
    }
    </div>
  </div>
</MainLayout>

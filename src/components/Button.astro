---
interface Props {
  onClick?: () => void;
  class: string;
}

const { class: className = "", onClick } = Astro.props;
---

<button
  class:list={[
    "flex items-center justify-center cursor-pointer gap-2 px-4 py-2 rounded-lg text-white transition-colors",
    className,
  ]}
  data-click={!!onClick}
>
  <slot />
</button>

<script>
  document.querySelectorAll('[data-click="true"]').forEach((button) => {
    button.addEventListener('click', () => {
      // Handle click event
    });
  });
</script>
